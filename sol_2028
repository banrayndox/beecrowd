#include <stdio.h>

int main() {
 
int N;
int caseo = 0;

while(scanf("%d", &N) !=EOF){
int numero=1;
    caseo++;
    for(int i=0; i<=N; i++){
        numero+=i;
    }
    if(numero>1){
    printf("caso %d: %d numeros\n", caseo,numero);
    }else{
        printf("caso %d: %d numero\n", caseo,numero);  
    }
    printf("0 ");
     for(int i=0; i<=N; i++){

for(int j=0; j<i; j++){
    printf("%d ",i);
}
    }
printf("\n");

}
    return 0;
}



